{
  "name": "comercialprado",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:server": "hotnode ./server/bin/www",
    "start:client": "http-server ./client -P 3000",
    "build:client": "webpack",
    "test": "npm run lint && jest --coverage",
    "lint": "eslint server/**/*.js && eslint client/**/*.js"
  },
  "dependencies": {
    "body-parser": "~1.16.0",
    "bulma": "^0.4.3",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.0",
    "express": "~4.14.1",
    "font-awesome": "^4.7.0",
    "mongoose": "^4.9.0",
    "morgan": "~1.7.0",
    "serve-favicon": "~2.3.2"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "hotnode": "0.0.8",
    "html-webpack-plugin": "^2.29.0",
    "http-server": "^0.10.0",
    "jest-cli": "^20.0.4",
    "sinon": "^2.3.8",
    "sinon-mongoose": "^2.0.2",
    "supertest": "^3.0.0",
    "webpack": "^3.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "client/**/*.js",
      "server/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "banches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
